<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BangkitBFAASubmission" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_github</item>
        <item name="colorPrimaryVariant">@color/darker_black_github</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_github</item>
        <item name="colorSecondaryVariant">@color/darker_green_github</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DividerDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="dividerColor">@color/white</item>
    </style>

    <style name="TextContentDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="TextContentDetail.Bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContentDetail.Bold.CountValue">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:text">100</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextContentDetail.Value">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="TextDetailWithDrawable" parent="TextContentDetail.Value">
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextItemList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextItemList.Drawabled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!--    Splashscreen Theme      -->
    <style name="Splashscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black_github</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>